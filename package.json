{
  "name": "ds-sam",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "test": "jest -- \"$FILE\"",
    "cli": "nest start --entryFile ./src/cli",
    "lint:ts": "eslint .",
    "lint:ts-fix": "eslint . --fix",
    "lint": "pnpm run lint:ts",
    "lint:fix": "pnpm run lint:ts-fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm lint && pnpm format:check",
    "fix": "pnpm lint:fix && pnpm format",
    "prepare": "husky"
  },
  "dependencies": {
    "@marinade.finance/ds-sam-sdk": "workspace:*",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/common": "^11.1.9",
    "dotenv": "^17.2.3",
    "log4js": "^6.9.1",
    "nest-commander": "^3.13.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "jest": "^30.0.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.8.3",
    "@marinade.finance/eslint-config": "1.3.1",
    "eslint": "^9.28.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "husky": "^9.1.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,json,yaml,yml,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  }
}
